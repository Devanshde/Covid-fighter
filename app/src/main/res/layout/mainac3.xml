<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center_vertical"
android:background="#FFFFFF"
android:backgroundTint="#FAFFFFFF"
android:foregroundTint="#03A9F4"
android:hapticFeedbackEnabled="false"
tools:context=".MainActivity3">

<LinearLayout

    android:id="@+id/linearLayout2"
    android:layout_width="384dp"
    android:layout_height="173dp"
    android:layout_margin="20dp"
    android:background="#17FFFFFF"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:paddingLeft="0dp"
        android:paddingRight="50dp"
        android:shadowColor="#9C27B0"
        android:text="Word Covid Report"
        android:textColor="#61F167"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="NewConfirmed : Loading"
        android:textColor="#FFC107" />
    //":146555,"":9201340,"NewDeaths":3852,"TotalDeaths":480648,"NewRecovered":91705,"TotalRecovered":4525682

    <TextView
        android:id="@+id/textView3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TotalConfirmed : loading"
        android:textColor="#FFC107" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TotalDeaths : loading"
        android:textColor="#F44336" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="NewRecovered : loading"
        android:textColor="#8BC34A" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TotalRecovered : loading"
        android:textColor="#8BC34A" />


</LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"

    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.227"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
    app:layout_constraintVertical_bias="0.047">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="100dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="10dp"
        android:text="Country wise data"
        android:textColor="#2196F3"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="asacd">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>